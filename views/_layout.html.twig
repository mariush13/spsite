<html>
    <head>
        <meta charset="utf-8">
        <title>{{ page.title }}</title>
        <link rel="stylesheet" type="text/css" href="/ckeditor/contents.css">
        <link rel="stylesheet" type="text/css" href="/static/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="/static/css/style.css">
        <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
        <script type="text/javascript" src="/static/js/bootstrap.js"></script>
        <script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
        <script type="text/javascript" src="/ckeditor/config.js"></script>
        <script type="text/javascript" src="/ckeditor/styles.js"></script>
    </head>
    <body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">
                    <img src="/static/img/core2.pl_logo.png" alt="core2.pl Logo" id="logo" />
                </a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav navbar-right">
                    {% if users.user.admin %}
                    <li class="dropdown">
                        <a href="/" class="dropdown-toggle" data-toggle="dropdown">Dev Tools <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/installer/show">Instalator klass php</a></li>
                            <li><a href="/objects/1/edit">Edycja strony głównej</a></li>
                            <li><a href="/objects/show">Zarządzanie obiektami</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                    {% endif %}
                    <li>
                        {% if not users.user %}
                            <a href="/login">Logowanie</a>
                        {% else %}
                            <a href="/objects/{{ users.user.ID }}" class="dropdown-toggle" data-toggle="dropdown">{{ users.user.email }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="/objects/{{ users.user.ID }}/edit">Konto</a></li>
                                <li><a href="/logout">Wyloguj</a></li>
                            </ul>
                        {% endif %}
                    </li>
                </ul>

            </div>
        </div>
    </div>
        <div id="content">
            {% if box %}
                <div class="wrapper">
                    {{ box.content|raw }}
                </div>
            {% endif %}
            {% if page %}
                <div class="wrapper-wide">
                    {{ page.content|raw }} {# Do not remove! #}
                    {{ page_content }} {# Do not remove! #}
                </div>
            {% endif %}
            <div class="clear"></div>
        </div>
    </body>
</html>
