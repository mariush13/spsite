{% if users.action %}
    <div class="wrapper">
        <div class="panel panel-{% if user.login_failure %}danger{% elseif not users.user %}info{% else %}success{% endif %}">
            <div class="panel-heading">
                <h3 class="panel-title">Logowanie</h3>
            </div>
            <div class="panel-body">
                {% if user.login_failure %}
                    Nieprawidłowe dane logowania.<br />
                    Następuje przekierowanie...
                    <script type="text/javascript">
                        setTimeout(function() { window.location = '/user/login'; }, 1000);
                    </script>
                {% elseif not users.user %}
                    <form action="/login" method="post" class="bs-example form-horizontal">
                        <fieldset>
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="inputEmail" placeholder="Email" name="email">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-10">
                                    <input type="password" class="form-control" id="inputPassword" placeholder="Hasło" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Zaloguj</button>
                            </div>
                        </fieldset>
                    </form>
                {% else %}
                    Zalogowany jako: {{ user.email }}.<br />
                    Następuje przekierowanie...
                    <script type="text/javascript">
                        setTimeout(function() { window.location = '/'; }, 1000);
                    </script>
                {% endif %}
            </div>
        </div>
    </div>
{% endif %}